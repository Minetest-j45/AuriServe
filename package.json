{
	"name": "auriserve",
	"version": "1.0.0",
	"description": "",
	"main": "server/src/Main.js",
	"bin": "server/src/Main.js",
	"scripts": {
		"dev": "npm run dev-admin & npm run dev-server",
		"dev-admin": "cd admin; npm run dev",
		"dev-server": "nodemon --config server/nodemon.json",
		"dev-clean": "rm -r admin; rm -r server; rm -rf node_modules",
		"build": "npm run build-admin && npm run build-server",
		"build-admin": "cd admin; npm run build",
		"build-server": "npm run lint-server && tsc --project server/tsconfig.json && pkg package.json --options expose-gc --out-path build && npm run build-clean",
		"build-clean": "find server/src -name '*.js' -type f -delete",
		"lint-server": "cd server; eslint -c .eslintrc.js 'src/**/*.ts'"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Aurailus/AuriServe.git"
	},
	"keywords": [
		"CMS",
		"Modern",
		"AuriServe"
	],
	"author": "Auri Collings",
	"license": "AGPL-3.0-only",
	"bugs": {
		"url": "https://github.com/Aurailus/AuriServe/issues"
	},
	"pkg": {
		"assets": [
			"server/views/*",
			"admin/res/**/*",
			"admin/build/*"
		]
	},
	"homepage": "https://github.com/Aurailus/AuriServe#readme",
	"devDependencies": {
		"@types/bcryptjs": "^2.4.2",
		"@types/compression": "^1.7.0",
		"@types/cookie-parser": "^1.4.2",
		"@types/debounce": "^1.2.0",
		"@types/express-fileupload": "^1.1.3",
		"@types/jsdom": "^16.2.5",
		"@types/log4js": "^2.3.5",
		"@types/minimist": "^1.2.0",
		"@types/mongodb": "^3.6.3",
		"@types/node": "^14.14.6",
		"@types/pug": "^2.0.4",
		"@types/rimraf": "^3.0.0",
		"@types/sass": "^1.16.0",
		"@typescript-eslint/eslint-plugin": "^4.10.0",
		"@typescript-eslint/parser": "^4.8.2",
		"eslint": "^7.14.0",
		"eslint-plugin-jsdoc": "^30.7.8",
		"nodemon": "^2.0.6",
		"pkg": "^4.4.9",
		"ts-node": "^9.0.0",
		"tslib": "^2.0.3",
		"typescript": "^4.0.3"
	},
	"dependencies": {
		"@types/mime": "^2.0.3",
		"@types/resize-img": "^1.1.0",
		"auriserve-api": "0.0.11",
		"bcryptjs": "^2.4.3",
		"body-parser": "^1.19.0",
		"compression": "^1.7.4",
		"cookie-parser": "^1.4.5",
		"debounce": "^1.2.0",
		"decache": "^4.6.0",
		"express": "^4.17.1",
		"express-fileupload": "^1.2.0",
		"jsdom": "^16.4.0",
		"log4js": "^6.3.0",
		"mime": "^2.4.6",
		"minimist": "^1.2.5",
		"moment": "^2.29.1",
		"mongodb": "^3.6.0",
		"preact": "^10.5.7",
		"preact-render-to-string": "^5.1.12",
		"prompt": "^1.0.0",
		"pug": "^3.0.0",
		"recursive-watch": "^1.1.4",
		"resize-img": "^2.0.0",
		"rimraf": "^3.0.2",
		"sass": "^1.29.0"
	}
}
